<div class="login-form">
  <h1>Admin Login</h1>

  <%= form_tag admin_login_path do %>
    <%= csrf_meta_tags %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

    <div class="field">
      <%= label_tag :email %>
      <%= email_field_tag :email %>
    </div>

    <div class="field">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>

    <div class="actions">
      <%= submit_tag "Login" %>
    </div>
  <% end %>
</div> 